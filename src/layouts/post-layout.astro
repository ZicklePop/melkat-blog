---
import Layout from './base-layout.astro'
import Article from '../components/article.astro'
const { content } = Astro.props
const { title, cover, id } = content
const permalink = `/p/${id}`
const isPermalink =
  `${Astro.canonicalURL}`.indexOf(`${Astro.site.pathname}p/`) > -1
const Component = isPermalink ? Layout : 'div'
---

<Component
  title={`melkat.blog - ${title}`}
  description={content.astro.source.split('\n')[0]}
  {cover}
  {permalink}
>
  <Article {...content} url={permalink}>
    <Fragment set:html={content.astro.html} />
  </Article>
</Component>
