---
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'
import '../styles/global.css'
import {
  baseUrl,
  defaultCover,
  title as blogTitle,
  description as blogDescription,
} from '../consts/config'

export interface Props {
  className?: string
  cover?: string
  description?: string
  permalink?: string
  showSearch?: boolean
  title?: string
}

const {
  className = 'font-sans max-w-xl mx-auto px-2',
  cover = defaultCover,
  description = blogDescription,
  permalink = '',
  showSearch = true,
  title = `${blogTitle} - ${blogDescription}`,
} = Astro.props
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content="melkat, blog" />
    <meta name="viewport" content="initial-scale=1.0, width=device-width" />
    <meta property="og:description" content={description} />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image" content={`${baseUrl}${cover}`} />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${baseUrl}${permalink}`} />
    <meta property="omg:proof" content="proven.lol/5a9e6f" />
    <link
      rel="alternate"
      type="application/feed+json"
      title={blogTitle}
      href="/feed.json"
    />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={blogTitle}
      href="/rss.xml"
    />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link
      rel="canonical"
      href={`${baseUrl}${permalink.replace(/\/1$/gi, '')}`}
    />
    <link rel="icon" href="/favicon.ico" />
    <link rel="mask-icon" sizes="any" href="/mask-icon.svg" color="#0caceb" />
  </head>
  <body class={className}>
    <Header />
    <main role="main">
      <slot />
    </main>
    <Footer showSearch={showSearch} />
  </body>
</html>
