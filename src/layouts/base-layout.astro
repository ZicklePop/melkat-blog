---
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'

const {
  className = 'font-sans max-w-xl mx-auto px-2',
  cover = '/cover.png',
  dark = '#000000',
  description = 'a blog by Melanie Kat',
  light = '#ffffff',
  permalink = 'https://melkat.blog/',
  title = 'melkat.blog - a blog by Melanie Kat',
} = Astro.props
---
<html lang='en'>
  <head>
    <title>{title}</title>
    <meta charset='utf-8' />
    <meta name='description' content={description} />
    <meta name='keywords' content='melkat, blog' />
    <meta name='twitter:description' content={description} />
    <meta name='twitter:image:alt' content='logo for melkat.blog' />
    <meta name='twitter:image' content={cover} />
    <meta name='twitter:title' content={title} />
    <meta name='viewport' content='initial-scale=1.0, width=device-width' />
    <meta property='og:description' content={description} />
    <meta property='og:image:height' content='630' />
    <meta property='og:image:width' content='1200' />
    <meta property='og:image' content={cover} />
    <meta property='og:title' content={title} />
    <meta property='og:type' content='website' />
    <meta property='og:url' content={permalink} />
    <meta property='twitter:url' content={permalink} />
    <link rel='alternate' type='application/rss+xml' title='melkat.blog' href='/rss.xml' />
    <link rel='apple-touch-icon' href='/apple-touch-icon.png' />
    <link rel='icon' href='/favicon.ico' />
    <link rel='mask-icon' sizes='any' href='/mask-icon.svg' color={light} />
    <style global define:vars={{ dark, light }}>
      @import '../styles/global.css';
    </style>
  </head>
  <body class={className}>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
