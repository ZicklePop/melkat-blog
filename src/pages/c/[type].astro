---
import Layout from '../../layouts/base-layout.astro'
import Article from '../../components/article.astro'
import uniqBy from 'lodash/uniqBy'
import { byDate } from '../../utils/sort'

export async function getStaticPaths({ paginate }) {
  let allPosts = await Astro.fetchContent('../p/*.md')
  allPosts = allPosts.filter(o => !!o.type).filter(o => !o.draft).sort(byDate)
  const uniqParams = uniqBy(allPosts, 'type').map(({ type }) => (
    { params: { type } }
  ))
  return uniqParams
}

const { type } = Astro.request.params
let posts = await Astro.fetchContent('../p/*.md');
posts = posts.filter(o => o.type === type).filter(o => !o.draft).sort(byDate);
---
<Layout title={`melkat.blog - ${type} posts`}>
  {posts.map(({ title, cover, link, domain, date, url, tags, type, content }) => <Article {title} {cover} {link} {domain} {date} {url} {tags} {type}><Fragment set:html={content.html}/></Article>)}
</Layout>
