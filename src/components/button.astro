---
export interface Props {
	className?: string;
	href?: string;
	type?: "button" | "submit" | "reset";
	id?: string;
	popovertarget?: string;
	popovertargetaction?: "show" | "hide" | "toggle";
}

const cx =
	"rounded-lg bg-cerulean-700 motion-safe:transition font-bold text-white hover:bg-cerulean-600 active:bg-cerulean-800 text-center px-4 py-2 focus:ring-2 outline-none border-2 border-cerulean-700 shadow-lg focus:shadow-md shadow-cerulean-600/20 focus:shadow-cerulean-600/50";

const { className = cx, ...rest } = Astro.props;
const El = rest.href ? "a" : "button";
---

<El class={className} {...rest}>
  <slot />
</El>
