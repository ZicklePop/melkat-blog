---
import { marked } from 'marked'

const { content, title, url } = Astro.props

const cx = {
  link: 'font-bold hover:underline',
}

const truncatedHtml = marked(content)
---

<div set:html={truncatedHtml} />
<a href={url} class={cx.link} title={`Continue reading ${title || 'this post'}`}
  >Continue reading</a
>
