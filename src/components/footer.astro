---
import Search from '../components/search.astro'
import { cxs } from '../consts/config'

export interface Props {
  showSearch?: boolean
}

const cx = {
  footer: 'text-center leading-normal',
  p: 'my-4',
  search: 'max-w-md mx-auto',
}

const { showSearch = true } = Astro.props
---

<footer class={cx.footer} role="contentinfo">
  {
    showSearch && (
      <div class={cx.search}>
        <Search />
      </div>
    )
  }
  <p class={`${cx.p} h-card`}>
    {'browse by '}
    <a class={`${cxs.a} u-url`} href="/d">links</a>
    {' and '}
    <a class={`${cxs.a} u-url`} href="/t">tags</a>
    <br />
    <a class={`${cxs.a} u-url`} href="/rss.xml">rss feed</a>
    {' â€¢ '}
    <a class={`${cxs.a} u-url`} href="/feed.json">json feed</a>
  </p>
  <p class={`${cx.p} h-card`}>
    a blog by
    <a class={`${cxs.a} u-url p-name`} href="https://melaniekat.com" rel="me"
      >melanie kat</a
    >
    &lt;3
    <br />
    <a class={`${cxs.a} u-url`} href="https://nyan.lol/@zicklepop" rel="me"
      >@zicklepop@nyan.lol</a
    >
  </p>
</footer>
