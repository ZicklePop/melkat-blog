---
import Category from './category.astro'
import Permalink from './permalink.astro'
import Tag from './tag.astro'
import getTags from '../utils/get-tags'

const cx = {
  li: 'inline-block uppercase my-1',
  tag: 'inline-block uppercase my-1 pr-1',
  ul: 'list-none mt-4'
}

const {
  url,
  tags,
  type,
} = Astro.props
---
<ul class={cx.ul}>
  <li class={cx.li}>
    <Permalink {url} />
  </li>
  {(!!type || !!tags) &&
    <li class={cx.li}>
      â€¢
    </li>
  }
  {!!type &&
    <li class={cx.li}>
      <Category {type} />
    </li>
  }
  {getTags(tags)?.map(tag => (
    <li class={cx.tag}>
      <Tag {tag} />
    </li>
  ))}
</ul>