---
import { title } from "@/src/consts/config";
import Logo from "./logo.astro";

const cx = {
	h1: "h-card text-4xl sm:text-5xl my-8 font-cartridge",
	link: "u-url no-underline hover:underline",
	logo: "inline-block mr-3 sm:mr-5 align-middle stroke-cerulean-500",
};
---

<header role="banner">
  <h1 class={cx.h1}>
    <a href="/" class={cx.link}>
      <div class={cx.logo} title="">
        <Logo width={64} />
      </div><span class="p-name p-org">{title}</span>
    </a>
  </h1>
</header>
