---
import { Image } from '@astrojs/image/components'
import { cxs, title } from '../consts/config'

const cx = {
  h1: 'font-light text-4xl my-6',
  link: 'no-underline hover:underline',
  logo: 'inline-block mr-2 align-middle',
  img: 'h-16 w-auto',
}
---

<header role="banner">
  <h1 class={cx.h1}>
    <a href="/" class={cx.link}>
      <div class={cx.logo}>
        <Image
          src={import('../../public/logo.png')}
          alt="illustration by supasavina"
          class={cx.img}
          height={192}
        />
      </div>{title}
    </a>
  </h1>
</header>
