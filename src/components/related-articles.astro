---
import type { CollectionEntry } from "astro:content";
import MiniArticle from "@/src/components/mini-article.astro";

export interface Props {
	posts: CollectionEntry<"posts">[];
}

const cx = {
	wrapper:
		"grid grid-cols-1 md:grid-cols-2 grid-rows-1 gap-4 pt-12 mt-12 border-solid border-t border-black/10 dark:border-white/25",
};

const { posts } = Astro.props;
---

<div class={cx.wrapper}>
  <h2 class="md:col-span-2 text-xl font-bold">Related posts</h2>
  {
    posts.map(({ data: { date, title }, slug }) => (
      <MiniArticle date={date} title={title} url={`/p/${slug}`} />
    ))
  }
</div>
