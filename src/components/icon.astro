  share: 'm105.5 45-30-30-30 30m30-30v75m-45 0v30h75',
  tag: 'M90.5 112.5v-30h30m-60 30v-60h60m-60 30h-30m30-30h-30m30 0v-30m30 30v-30',
}
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  xml:space="preserve"
  fill-rule="evenodd"
  stroke-linecap="round"
  stroke-linejoin="round"
  clip-rule="evenodd"
  viewBox="0 0 151 135"
  class={`${className} ${appendClass}`}
  aria-label={`${type} icon`}
>
  <path fill="none" stroke={stroke} stroke-width={strokeWidth} d={paths[type]}
  ></path>
</svg>
