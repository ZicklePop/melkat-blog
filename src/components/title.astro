---
import PageHeader from './page-header.astro'
import { cxs } from '../consts/config'

export interface Props {
  title: string
  link: string
  isExternal?: boolean
}

const { title = '', link = '', isExternal = false } = Astro.props
---

<PageHeader>
  <a
    href={link}
    class={`text-2xl md:text-3xl ${isExternal ? cxs.a : cxs.aHover}`}
    aria-label={`${isExternal ? 'Link to ' : 'Permalink for '}${title}`}
    style={{ textWrap: 'balance' }}
  >
    {title}
  </a>
</PageHeader>
